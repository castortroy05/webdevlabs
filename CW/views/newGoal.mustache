        <![endif]-->
        <h1>Guest Book</h1>
        <h2>Write a New Entry</h2>

        <form method="post"role="form">
            
            <div class="row mb-3">
                <label for="author" class="col-sm-2 col-form-label">Author</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="author" id="author" placeholder="Written by " required>
                </div>
            </div>

            <div class="row mb-3">
                <label for="exercise" class="col-sm-2 col-form-label">Exercise</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="exercise" id="exercise" placeholder="Exercise name " required>
                </div>
            </div>
        
            <div class="form-group">
                <label for="details">Details</label>
                <textarea class="form-control" id="details" name="details" placeholder="Details of exercise " rows="3" required >
            </textarea>
            </div>

            <div class="row mb-3">
                <label for="endDate" class="col-2 col-form-label">Date</label>
                <div class="col-10">
                  <input class="form-control" type="date" value="2021-04-16" name ="endDate" id="endDate">
                </div>
              </div>

            <div class="form-group">
                <input type="submit" value="Add Goal" class="btn rounded-pill btn-outline-primary shadow">
            </div>
      
        </form>


        <script src="" async defer></script>
    </body>
</html>
<html>
    <head>
       {{>header}}
    </head>
    <body class ="container-fluid">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <h1>{{title}}</h1>
        <div class="text-right">
            <a href="/new-entry" class="btn btn-primary">
             Write in the guest book
            </a>     
        </div>
        <div class ="mx-auto card-deck">
        {{#entries}}        
            <div class="card shadow-lg" style="min-width: 30rem; max-width: 30rem;">
                <div class="card-header">
                    {{subject}}
                </div>
                <div class="card-body">
                 <p class="card-text">
                {{contents}}
                </p>
            <p class="card-footer">
                Written by {{author}}, on {{published}}
            </p>
        </div>
    </div>

        <hr>
        {{/entries}}</div>
        {{^entries}}
        No entries yet.
        {{/entries}}
        
        <script src="" async defer></script>
    </body>
</html>